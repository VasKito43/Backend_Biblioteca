<form action="/cadastrarProduto" method="POST" enctype="multipart/form-data">
  <p>Nome do Produto:</p>
  <input type="text" name="nome" required>
  <p>Valor:</p>
  <input type="number" name="valor" step="0.01" required>
  <p>Selecione uma imagem:</p>
  <input type="file" name="imagem" accept="image/*" required>
  <button type="submit" class="btn btn-primary">Cadastrar</button>
</form>

<div class="container mt-4">
  <div class="row">
    {{#each produtos}}
      <div class="col-lg-3 col-md-6 col-sm-12 mb-3">
        <div class="card h-100">
          <img src="/imagens/{{id_produto}}.{{imagem}}" class="card-img-top" alt="{{nome}}">
          <div class="card-body">
            <h5 class="card-title">{{nome}}</h5>
            <p class="card-text">R$ {{valor}}</p>
            <a href="/alterarProduto/{{id_produto}}" class="btn btn-warning me-2">Alterar</a>
            <form action="/removerProduto" method="POST" class="d-inline">
              <input type="hidden" name="id_produto" value="{{id_produto}}">
              <button class="btn btn-danger">Remover</button>
            </form>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>