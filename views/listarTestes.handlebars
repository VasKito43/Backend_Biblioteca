{{!-- views/listarTestes.handlebars --}}
<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Lista de Testes</h2>
    <a href="/cadastrarTeste" class="btn btn-primary">Cadastrar Novo Teste</a>
  </div>

  {{#if testes}}
    <table class="table table-striped table-hover">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Imagem</th>
          <th scope="col">Nome</th>
          <th scope="col">Valor</th>
          <th scope="col" class="text-center">Ações</th>
        </tr>
      </thead>
      <tbody>
        {{#each testes}}
          <tr>
            <td>
              {{#if this.caminhoImagem}}
                <img src="{{this.caminhoImagem}}" alt="{{this.nome}}" style="max-width: 100px; max-height: 100px;">
              {{else}}
                <span class="text-muted">Sem imagem</span>
              {{/if}}
            </td>
            <td>{{this.nome}}</td>
            <td>R$ {{this.valor}}</td>
            <td class="text-center">
              <a href="/alterarTeste/{{this.id_teste}}" class="btn btn-sm btn-warning me-1">
                Alterar
              </a>
              <form action="/removerTeste" method="POST" class="d-inline">
                <input type="hidden" name="id_teste" value="{{this.id_teste}}">
                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Deseja realmente remover este teste?');">
                  Remover
                </button>
              </form>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{else}}
    <div class="alert alert-info" role="alert">
      Nenhum teste cadastrado no momento.
    </div>
  {{/if}}
</div>
